<resources>

    <color name="black">#000</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/Test</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/listViewDark</item>
        <item name="android:textViewStyle">@style/Test2</item>
    </style>

    <style name="listViewDark"
           parent="android:Widget.Holo.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:background">#000</item>
    </style>

    <style name="Test"
           parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:maxWidth">100dp</item>
    </style>
    <style name="Test2"
           parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:colorBackground">#000</item>
    </style>
</resources>
